<% if comment.favorited_by?(current_user) %>
  <%= link_to comment_favorite_path(comment), method: :delete, remote: true do %>
    ♥<%= comment.comment_favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to comment_favorites_path(comment), method: :post, remote: true do %>
    ♡<%= comment.comment_favorites.count %>いいね
  <% end %>
<% end %>