<div class="container">
  <div class="row">
    <h4>ログイン</h4>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label "メールアドレス", class: "col-3" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
    </div>
    <div class="form-group">
      <%= f.label "パスワード", class: "col-3" %>
      <%= f.text_field :password, autocomplete: "current_password", class: "col-5" %>
    </div>
    <div class="form-group offset-1">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label "ログイン状態を維持する", class: "col-4" %>
    　<% end %>
    </div>
    <div class="form-group">
      <%= f.submit "ログイン", class:"btn btn-success offset-4" %>
    </div>
  <% end %>
</div>