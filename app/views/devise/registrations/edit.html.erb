<div class="container">
  <h2>登録アドレス・パスワード変更</h2>
  <!--<div class="row">-->
    <%= form_with model: @user, url: user_registration_path, local: true, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "新しいメールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6" %>
      </div>
      <div class="form-group">
        <%= f.label "新しいパスワード" %> <i>（変更を希望しない場合は空欄にしてください）</i><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "col-md-6" %>
      </div>
      <div class="form-group">
        <%= f.label "新しいパスワード（確認用）" %><i>（変更を希望しない場合は空欄にしてください）</i><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "col-md-6" %>
      </div>
      <div class="form-group">
        <%= f.label "現在登録中のパスワード" %><i class="text-danger">（＊必ず入力してください）</i> <br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "登録中のパスワードを入力してください", class: "col-md-6" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更する", class: "btn btn-outline-success offset-2" %>
      </div>
    <% end %>
  <!--</div>-->
</div>