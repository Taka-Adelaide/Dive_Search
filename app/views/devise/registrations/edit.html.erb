<div class="container">
  <h2>登録アドレス・パスワード変更</h2>
  <div class="row">
    <%= form_with model: @user, url: user_registration_path, local: true, method: :patch do |f| %>
      <div class="col">
        <%= f.label "新しいメールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="col">
        <%= f.label "新しいパスワード" %> <i>（変更を希望しない場合は空欄にしてください）</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="col">
        <%= f.label "新しいパスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="col">
        <%= f.label "現在登録中のパスワード（必ず入力してください）" %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="actions">
        <%= f.submit "変更する" %>
      </div>
    <% end %>
  </div>
</div>