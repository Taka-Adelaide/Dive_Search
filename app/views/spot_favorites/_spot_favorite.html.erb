<div class="row">
  <div class="col-4"><p>お気に入り☆<%= spot.spot_favorites.count %>件</P></div>
  <div class="col-4">
    <% if spot.favorited_by?(current_user) %>
      <%= link_to spot_spot_favorites_path(spot), method: :delete, remote: true do %>
        <div class="btn btn-outline-secondary btn-sm">お気に入り削除</div>
      <% end %>
    <% else %>
      <%= link_to spot_spot_favorites_path(spot), method: :post, remote: true do %>
        <div class="btn btn-outline-success btn-sm">お気に入り登録</div>
      <% end %>
    <% end %>
  </div>
</div>

