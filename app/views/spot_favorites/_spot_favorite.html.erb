<p>お気に入り</p><%= spot.spot_favorites.count %>件
<% if spot.favorited_by?(current_user) %>
  <%= link_to spot_spot_favorites_path(spot), method: :delete, remote: true do %>
    お気に入り登録削除
  <% end %>
<% else %>
  <%= link_to spot_spot_favorites_path(spot), method: :post, remote: true do %>
    お気に入り登録
  <% end %>
<% end %>