<% comments.each do |comment| %>
  <div class="card round-imp mb-3">
    <div class="row">
      <div class=" col-2 my-auto">
        <%= attachment_image_tag comment, :image, :fill, 140, 100, fallback: "no_image.jpg" %>
      </div>
      <div class="col-6">
        <h6 class="text-sub border-bottom pt-2"><strong><%= comment.title %></strong></h6>
        <div class=""><%= comment.comment %></div>
      </div>
      <div class="col-2 my-auto">
        <div class=""><i class="fas fa-user"></i><%= comment.user.name %></div>
        <div class="">
          <i class="fas fa-map-marker-alt"></i>
          <%= link_to spot_path(comment.spot.id) do %>
            <%= comment.spot.name %>
          <% end %>
        </div>
        <div class="">♥<%= comment.comment_favorites.count %>いいね</div>
        <div class=""><%= comment.created_at %></div>
      </div>
      <div class="col-2 my-auto"><%= link_to "詳細", spot_comment_path(comment.spot.id, comment.id), class: "btn btn-outline-success" %></div>
    </div>
  </div>
<% end %>
