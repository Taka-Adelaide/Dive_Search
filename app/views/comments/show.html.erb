<div class="container">
  <h4>口コミ・レビュー</h4>
  <div class="row">
    <div class="col"><h5><%= @spot.area.name %></h5></div>
    <div class="col"><h5><%= @spot.name %></h5></div>
  </div>
  <div class="row">
    <div class="col">
      ユーザー画像
    </div>
    <div class="col">
      <%= @user.name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @comment.image, :image, :fill, 10, 10, fallback: "no_image.jpg" %>
    </div>
    <div class="col">
      <%= @comment.comment %>
    </div>
  </div>

  <h5>その他の口コミ・レビュー</h5>
  <%= render "comments/index_large", comments: @comments %>
</div>