<div class="container">
  <div class="row">
    <div class="col-5">
      <h5>ユーザー詳細</h5>
      <%= @user.user_name %>
      <br>
      <%= @user.email %>
      <br>
      <%= @user.profile %>

      Cカードランク：<%= @user.rank %>

      <div>
        <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-success btn-sm"%>
      </div>
    </div>
    <div class="col-7">
      <h5>口コミ一覧</h5>
      <% @comments.each do |comment| %>
      <table>
        <tr>
          <td><%= comment.spot.name %></td>
        </tr>
        <tr>
          <td class="col-8"><%= comment.comment %></td>
          <td class="col-2">♥<%= comment.comment_favorites.count %>いいね</td>
          <td class="col-2"><%= link_to "編集する", edit_user_comment_path(current_user.id, comment.id) %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>


