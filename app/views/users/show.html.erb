<div class="container">
  <div class="title">
    <h2><%= @user.user_name %>さんのマイページ</h2>
  </div>
  <div class="row">
    <div class="col-5">
      <h5>ユーザー詳細</h5>
      <table>
        <tr class="border-bottom">
          <td class="col-5">ユーザー名</td>
          <td class="col-5"><%= @user.user_name %></td>
        </tr>
        <tr class="border-bottom">
          <td class="col-5">登録アドレス</td>
          <td class="col-5"><%= @user.email %></td>
        </tr>
        <tr class="border-bottom">
          <td class="col-5">プロフィール</td>
          <td class="col-5"><%= @user.profile %></td>
        </tr>
        <tr class="border-bottom">
          <td class="col-5">Cカードランク</td>
          <td class="col-5"><%= @user.rank %></td>
        </tr>
      </table>
      <div>
        <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-outline-success mt-3 ml-3"%>
      </div>
    </div>
    <div class="col-7">
      <h5>口コミ一覧</h5>
      <% @comments.each do |comment| %>
      <div class="card mb-3">
        <div class="row">
          <div class=" col-2 my-auto">
            <%= attachment_image_tag comment.image, :image, :fill, 20, 20, fallback: "no_image.jpg" %>
          </div>
          <div class="col-6">
            <div class=""><%= comment.comment %></div>
          </div>
          <div class="col-2 my-auto">
            <div class=""><i class="fas fa-map-marker-alt"></i><%= comment.spot.name %></div>
            <div class="">♥<%= comment.comment_favorites.count %>いいね</div>
          </div>
          <div class="col-2 my-auto"><%= link_to "編集", edit_spot_comment_path(comment.spot.id, comment.id), class: "btn btn-outline-success" %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


