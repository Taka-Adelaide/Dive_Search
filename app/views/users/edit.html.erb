<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>

  <%= form_with model: @user, url: user_path, local: true, method: :patch do |f| %>
    <div class="row">
      <%= f.label "お名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "海野太郎" %>
    </div>
    <div class="row">
      <%= f.label "ユーザー名" %>
      <%= f.text_field :user_name, placeholder: "ユーザー名" %>
    </div>
    
    <div class="row">
      <%= f.label "コメント" %>
      <%= f.text_field :comment %>
    </div>

    <div class="row">
      <%= f.label "Cカードランク" %>
      <%= f.select :rank, User.ranks.keys %>
    </div>
    
    <div class="row">
      <%= f.submit "編集する" %>
    </div>
  <% end %>
</div>


<%= link_to "メールアドレス・パスワードの変更はこちら", edit_user_registration_path %>



















